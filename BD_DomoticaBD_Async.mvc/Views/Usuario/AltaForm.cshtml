@model Biblioteca.Usuario

@{
    ViewData["Title"] = "Alta de Usuario";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="AltaForm" method="post">
    <div asp-validation-summary="All"></div>
    <div>
        <label asp-for="Nombre">Nombre:</label>
        <input asp-for="Nombre" />
        <label asp-for="Correo">Correo:</label>
        <input asp-for="Correo" />
        <label asp-for="Contrasenia">Contrasenia:</label>
        <input asp-for="Contrasenia" />
        <label asp-for="Telefono">Telefono:</label>
        <input asp-for="Telefono" />
    </div>
    <button type="submit">Guardar</button>
</form>
