<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BD_DomoticaBD_Async.mvc</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BD_DomoticaBD_Async.mvc.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
                <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Titomesticos</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>
                        <li class="nav-item dropdown">
                            <button class="btn dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                Casa
                            </button>
                            <ul class="dropdown-menu dropdown-menu">
                                <li><a class="nav-link text-dark" asp-area="" asp-controller="Casa" asp-action="GetAll">Listado</a></li>
                                <li><a class="nav-link text-dark" asp-area="" asp-controller="Casa" asp-action="AltaForm">Crear</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <button class="btn  dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                Electrodomestico
                            </button>
                            <ul class="dropdown-menu dropdown-menu">
                                <li><a class="nav-link text-dark" asp-area="" asp-controller="Electrodomestico" asp-action="GetAll">Listado</a></li>
                                <li><a class="nav-link text-dark" asp-area="" asp-controller="Electrodomestico" asp-action="AltaForm">Crear</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <button class="btn dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                Usuario
                            </button>
                            <ul class="dropdown-menu dropdown-menu">
                                <li><a class="nav-link text-dark" asp-area="" asp-controller="Usuario" asp-action="GetAll">Listado</a></li>
                                <li><a class="nav-link text-dark" asp-area="" asp-controller="Usuario" asp-action="AltaForm">Crear</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - BD_DomoticaBD_Async.mvc - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
